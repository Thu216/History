<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout_parent_item">

    <android.support.v7.widget.CardView
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:weightSum="5"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="68dp">
            <TextView
                android:drawableLeft="@drawable/ic_library_books"
                android:drawableStart="@drawable/ic_library_books"
                android:drawablePadding="@dimen/margin_small"
                android:padding="@dimen/margin_small"
                android:id="@+id/tvNumPost"
                android:textSize="@dimen/text_size_data"
                android:text="Bài 12"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvItemPost"
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:textSize="13sp"
                android:textAlignment="gravity"
                android:text="Nước Việt Nam dân chủ Cộng hòa từ sau 02/09/1945 đến 19/12/1946" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>